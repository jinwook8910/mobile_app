<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15dp">

        <ImageButton
            android:id="@+id/exit"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="right"
            android:background="@drawable/exit" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="15dp"
            android:text="일정 평가"
            android:textColor="#6200EE"
            android:textSize="25dp" />

<!--        <TextView-->
<!--            android:id="@+id/text1"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:gravity="center"-->
<!--            android:text="화살표를 눌러서 평가할 일정을 선택해주세요"-->
<!--            android:textColor="#FF696969"-->
<!--            android:textSize="15dp" />-->

        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:text="별점"
            android:textSize="20dp" />

        <RatingBar
            android:id="@+id/ratingbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:progressTint="#FFFFD700"
            android:progressBackgroundTint="#FF696969"
            android:secondaryProgressTint="#FFDAA520"
            android:layout_margin="10dp"
            android:numStars="5"
            android:rating="1"
            android:stepSize="0.5"
            android:scaleX="0.8"
            android:scaleY="0.8"/>

        <TextView
            android:id="@+id/text2"
            android:layout_width="173dp"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="오늘의 방해 요소"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/interrupt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="방해요소를 입력하세요."
                android:textColorHint="#FF696969" />
            <Button
                android:id="@+id/add_interrupt_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="추가"
                android:scaleX="0.8"
                android:scaleY="0.8"
                android:backgroundTint="#FFFF0000"
                android:textColor="#FFFFFFFF" />
        </LinearLayout>

    <!--    <TextView-->
    <!--        android:id="@+id/text3"-->
    <!--        android:layout_width="wrap_content"-->
    <!--        android:layout_height="wrap_content"-->
    <!--        android:layout_marginTop="68dp"-->
    <!--        android:textColor="#FF0000FF"-->
    <!--        android:textSize="30sp" />-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">
            <ImageButton
                android:id="@+id/button_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:maxWidth="50dp"
                android:maxHeight="50dp"
                android:scaleType="fitCenter"
                android:src="@drawable/left"/>

            <Button
                android:id="@+id/rating_button"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="통계" />

            <ImageButton
                android:id="@+id/button_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:maxWidth="50dp"
                android:maxHeight="50dp"
                android:scaleType="fitCenter"
                android:src="@drawable/right"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>