<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/backColor">

    <View
        android:layout_width = "match_parent"
        android:layout_height = "0.5dp"
        android:background="@color/white"
        android:layout_marginTop="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <TextView
            android:id="@+id/view_label1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="주간 시간표"
            android:textSize="15dp"
            android:layout_margin="5dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="horizontal"/>

    </LinearLayout>

    <View
        android:layout_width = "match_parent"
        android:layout_height = "1dp"
        android:background="@color/lineColor"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="8dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <TextView
            android:id="@+id/view_label2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="일일 시간표"
            android:textSize="15dp"
            android:layout_margin="10dp"/>

        <GridView
            android:id="@+id/gridView1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:columnWidth="120dp"
            android:horizontalSpacing="1dp"
            android:numColumns="auto_fit"
            android:stretchMode="spacingWidthUniform"
            android:verticalSpacing="1dp"/>

    </LinearLayout>

    <!--navigation button-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity = "bottom">
        <View
            android:layout_width = "match_parent"
            android:layout_height = "0.5dp"
            android:background="@color/white"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal"
            android:background="#00ff0000"
            android:gravity="bottom">

            <ImageButton
                android:id="@+id/goal_navi_btn1"
                android:layout_width="220px"
                android:layout_height="100px"
                android:background="@drawable/goal_unselected"
                />

            <ImageButton
                android:id="@+id/goal_navi_btn2"
                android:layout_width="220px"
                android:layout_height="100px"
                android:background="@drawable/static_unselected"
                />

            <!--지금은 로그인 버튼-->
            <ImageButton
                android:id="@+id/goal_navi_btn5"
                android:layout_width="220px"
                android:layout_height="100px"
                android:background="@drawable/home_unselected"
                />


            <ImageButton
                android:id="@+id/goal_navi_btn3"
                android:layout_width="220px"
                android:layout_height="100px"
                android:background="@drawable/timetable_selected"
                />

            <ImageButton
                android:id="@+id/goal_navi_btn4"
                android:layout_width="220px"
                android:layout_height="100px"
                android:background="@drawable/calendar_unselected"
                />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>