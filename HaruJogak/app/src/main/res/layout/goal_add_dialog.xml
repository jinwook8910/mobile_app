<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="350dp"
    android:layout_height="530dp"
    android:orientation="vertical"
    android:background="@color/backColor">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:paddingLeft="125dp"
        >
        <TextView
            android:id="@+id/goal_add_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:textColor="@color/black"
            android:fontFamily="@font/woman_flower"
            />
        <ImageButton
            android:id="@+id/goal_exit_btn"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="80dp"
            android:background="@drawable/closebutton"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:orientation="vertical"
        android:gravity="center">

        <EditText
            android:id="@+id/goal_add_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:ems="10"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/goal_add_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp" />

        <CalendarView
            android:id="@+id/goal_add_calendar"
            android:layout_width="250dp"
            android:layout_height="310dp"
            />
    </LinearLayout>

    <ImageButton
        android:id="@+id/goal_add_btn"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="15dp"
        android:layout_gravity="right"
        android:background="@drawable/ok_button"
        />

</LinearLayout>