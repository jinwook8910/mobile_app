<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/add_task"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:background="@drawable/add_icon"
                android:onClick="onClickAddTaskButton" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <com.github.mikephil.charting.charts.PieChart
                android:id="@+id/pieChart"
                android:layout_width="match_parent"
                android:layout_height="300dp" />

            <!--        <ImageView-->
            <!--            android:id="@+id/timetable"-->
            <!--            android:layout_width="290dp"-->
            <!--            android:layout_height="304dp"-->
            <!--            android:background="@drawable/empty_graph"-->
            <!--            android:onClick="onClickDecoTaskButton" />-->

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="특정 날짜에 적용"
            android:textSize="15dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Date : "
                android:textSize="20dp" />

            <Button
                android:id="@+id/date_set_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/themeColor"
                android:onClick="onClickSet"
                android:text="yy / mm / dd" />
            <!--버튼 색은 Tint로 설정해야 적용되는 듯?? 왜그런거지-->
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="반복하기"
            android:textSize="15dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp">

            <CheckBox
                android:id="@+id/mon_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/mon_button"
                android:button="@null"
                android:onClick="checkDay"
                android:scaleX="0.95"
                android:scaleY="0.95" />

            <CheckBox
                android:id="@+id/tue_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/tue_button"
                android:button="@null"
                android:onClick="checkDay"
                android:scaleX="0.95"
                android:scaleY="0.95" />

            <CheckBox
                android:id="@+id/wed_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/wed_button"
                android:button="@null"
                android:onClick="checkDay"
                android:scaleX="0.95"
                android:scaleY="0.95" />

            <CheckBox
                android:id="@+id/thr_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/thu_button"
                android:button="@null"
                android:onClick="checkDay"
                android:scaleX="0.95"
                android:scaleY="0.95" />

            <CheckBox
                android:id="@+id/fri_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/fri_button"
                android:button="@null"
                android:onClick="checkDay"
                android:scaleX="0.95"
                android:scaleY="0.95" />

            <CheckBox
                android:id="@+id/sat_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/sat_button"
                android:button="@null"
                android:onClick="checkDay"
                android:scaleX="0.95"
                android:scaleY="0.95" />

            <CheckBox
                android:id="@+id/sun_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/sun_button"
                android:button="@null"
                android:onClick="checkDay"
                android:scaleX="0.95"
                android:scaleY="0.95" />

        </LinearLayout>

        <Button
            android:id="@+id/add_timeTable_done"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_margin="15dp"
            android:backgroundTint="#505159"
            android:text="추가"
            android:textColor="#fff" />
    </LinearLayout>

</ScrollView>