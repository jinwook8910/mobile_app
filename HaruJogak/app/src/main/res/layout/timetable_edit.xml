<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right">

        <ImageButton
            android:id="@+id/add_task"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/add_icon"
            android:onClick="onClickAddTaskButton" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/pieChart"
            android:layout_width="match_parent"
            android:layout_height="300dp" />

<!--        <ImageView-->
<!--            android:id="@+id/timetable"-->
<!--            android:layout_width="290dp"-->
<!--            android:layout_height="304dp"-->
<!--            android:background="@drawable/empty_graph"-->
<!--            android:onClick="onClickDecoTaskButton" />-->

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="특정 날짜에 적용"
        android:textSize="15dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date : "
            android:textSize="30dp" />

        <Button
            android:id="@+id/date_set_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClickSet"
            android:text="yy / mm / dd" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="반복하기"
        android:textSize="15dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:text="월"
            android:textSize="30dp" />

        <TextView
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:text="화"
            android:textSize="30dp" />

        <TextView
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:text="수"
            android:textSize="30dp" />

        <TextView
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:text="목"
            android:textSize="30dp" />

        <TextView
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:text="금"
            android:textSize="30dp" />

        <TextView
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:text="토"
            android:textSize="30dp" />

        <TextView
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:text="일"
            android:textSize="30dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/checkBox1"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:scaleX="1.2"
            android:scaleY="1.2" />

        <CheckBox
            android:id="@+id/checkBox2"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:scaleX="1.2"
            android:scaleY="1.2" />

        <CheckBox
            android:id="@+id/checkBox3"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:scaleX="1.2"
            android:scaleY="1.2" />

        <CheckBox
            android:id="@+id/checkBox4"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:scaleX="1.2"
            android:scaleY="1.2" />

        <CheckBox
            android:id="@+id/checkBox5"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:scaleX="1.2"
            android:scaleY="1.2" />

        <CheckBox
            android:id="@+id/checkBox6"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:scaleX="1.2"
            android:scaleY="1.2" />

        <CheckBox
            android:id="@+id/checkBox7"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:scaleX="1.2"
            android:scaleY="1.2" />
    </LinearLayout>

    <Button
        android:id="@+id/add_timeTable_done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_margin="20dp"
        android:background="#505159"
        android:text="추가"
        android:textColor="#fff"
        android:textSize="30dp" />

</LinearLayout>